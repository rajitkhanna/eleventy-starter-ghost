---
pagination:
  data: collections.posts
  size: 100
  alias: posts
---

{% extends 'layouts/default.njk' %}
{% from "partials/card.njk" import card %}

{% set title = "Posts" %}

{% block content %}
    <section class="post-feed">
        {% for post in posts %}
            {% if post.feature_image and post.primary_tag.slug != 'podcast' %}
                {{ card(post) }}
            {% endif %}
        {% endfor %}
    </section>

    {% include "partials/pagination.njk" %}
{% endblock%}
