---
pagination:
  data: collections.posts
  size: 12
  alias: posts
---

{% extends 'layouts/default.njk' %}
{% from "partials/card.njk" import card %}

{% set title = "Posts" %}

{% block content %}
    <section class="post-feed">
        {% for post in posts %}
            {% if post.primary_tag != podcast %}
                {{ card(post) }}
            {% endif %}
        {% endfor %}
    </section>

    {% include "partials/pagination.njk" %}
{% endblock%}
